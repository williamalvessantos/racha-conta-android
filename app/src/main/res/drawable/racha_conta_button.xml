<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#0277bd" />
            <corners android:radius="@dimen/button_radius" />
            <gradient android:angle="90" android:centerColor="@color/yellow" android:endColor="@color/yellow" android:startColor="@color/yellow" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#0277bd" />
            <corners android:radius="@dimen/button_radius" />
            <gradient android:angle="90" android:centerColor="@color/yellow" android:endColor="@color/yellow" android:startColor="@color/yellow" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#212121" />
            <corners android:radius="@dimen/button_radius" />
            <gradient android:angle="90" android:centerColor="#DCDCDC" android:endColor="#DCDCDC" android:startColor="#DCDCDC" />
        </shape>
    </item>

</selector>